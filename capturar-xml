from flask import Flask, request
import logging

app = Flask(__name__)

# Configuração do logger
logging.basicConfig(level=logging.DEBUG)

@app.route("/capturar_xml", methods=["POST"])
def capturar_xml():
    try:
        xml_data = request.data.decode("utf-8")  # Captura o XML da requisição
        logging.debug(f"XML recebido:\n{xml_data}")  # Exibe o XML no log
        return "XML capturado", 200
    except Exception as e:
        logging.error(f"Erro ao capturar XML: {str(e)}")
        return "Erro ao processar XML", 500

if __name__ == "__main__":
    app.run(debug=True, host="0.0.0.0", port=5000)
